<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>io.squark.yggdrasil.yggdrasil-framework-provider.it</groupId>
    <artifactId>yggdrasil-resteasy-framework-provider-integration-test</artifactId>
    <parent>
        <artifactId>yggdrasil-framework-provider</artifactId>
        <groupId>io.squark.yggdrasil</groupId>
        <version>0.0.2-ALPHA-SNAPSHOT</version>
    </parent>

    <name>Yggdrasil JAX-RS provider integration tests</name>
    <description>
        Integrations tests for Yggdrasil JAX-RS provider
    </description>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <dependencies>
        <!-- INTERNAL DEPENDENCIES -->
        <dependency>
            <groupId>io.squark.yggdrasil.yggdrasil-framework-provider</groupId>
            <artifactId>yggdrasil-resteasy-framework-provider</artifactId>
            <scope>provided</scope>
        </dependency>

        <!-- TEST DEPENDENCIES -->
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.jayway.restassured</groupId>
            <artifactId>rest-assured</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-exec</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-all</artifactId>
            <version>1.9.5</version>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>${version.maven.failsafe.plugin}</version>
                <configuration>
                    <includes>
                        <include>**/*IntegrationTest.java</include>
                    </includes>
                    <systemProperties>
                        <targetArtifact>
                            ${project.build.directory}/${project.artifactId}-${project.version}-yggdrasil.jar
                        </targetArtifact>
                        <jacoco.argLine>${jacoco.argLine}</jacoco.argLine>
                    </systemProperties>
                    <argLine>${jacoco.argLine}</argLine>
                </configuration>
            </plugin>
            <plugin>
                <groupId>io.squark.yggdrasil</groupId>
                <artifactId>yggdrasil-maven-plugin</artifactId>
                <version>${project.version}</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>package-yggdrasil</goal>
                        </goals>
                        <configuration>
                            <providerConfigurations>
                                <providerConfiguration>
                                    <identifier>ResteasyFrameworkProvider</identifier>
                                    <properties>
                                        <port>8877</port>
                                    </properties>
                                </providerConfiguration>
                            </providerConfigurations>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
