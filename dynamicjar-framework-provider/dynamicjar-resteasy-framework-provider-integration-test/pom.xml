<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>io.hakansson.dynamicjar.dynamicjar-framework-provider.it</groupId>
    <artifactId>dynamicjar-resteasy-framework-provider-integration-test</artifactId>
    <parent>
        <groupId>io.hakansson</groupId>
        <artifactId>dynamicjar</artifactId>
        <version>0.0.1-ALPHA-SNAPSHOT</version>
        <relativePath>../../pom.xml</relativePath>
    </parent>

    <description>A simple IT verifying the basic use case.</description>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <dependencies>
        <!-- INTERNAL DEPENDENCIES -->
        <dependency>
            <groupId>io.hakansson.dynamicjar.dynamicjar-framework-provider</groupId>
            <artifactId>dynamicjar-resteasy-framework-provider</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>io.hakansson.dynamicjar.dynamicjar-framework-provider</groupId>
            <artifactId>dynamicjar-logging-module</artifactId>
            <scope>compile</scope>
        </dependency>

        <!-- TEST DEPENDENCIES -->
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.jayway.restassured</groupId>
            <artifactId>rest-assured</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-exec</artifactId>
            <scope>test</scope>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <executions>
                    <execution>
                        <id>it</id>
                        <goals>
                            <goal>integration-test</goal>
                            <goal>verify</goal>
                        </goals>
                    </execution>
                </executions>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>${version.maven.failsafe.plugin}</version>
                <configuration>
                    <includes>
                        <include>**/*IntegrationTest.java</include>
                    </includes>
                    <systemProperties>
                        <targetArtifact>
                            ${project.build.directory}/${project.artifactId}-${project.version}-dynamicjar.jar
                        </targetArtifact>
                        <jacoco.argLine>${jacoco.argLine}</jacoco.argLine>
                    </systemProperties>
                    <argLine>${jacoco.argLine}</argLine>
                </configuration>
            </plugin>
            <plugin>
                <groupId>io.hakansson.dynamicjar</groupId>
                <artifactId>dynamicjar-maven-plugin</artifactId>
                <version>${project.version}</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>package-dynamicjar</goal>
                        </goals>
                        <configuration>
                            <providerConfigurations>
                                <providerConfiguration>
                                    <identifier>ResteasyFrameworkProvider</identifier>
                                    <properties>
                                        <port>8877</port>
                                    </properties>
                                </providerConfiguration>
                            </providerConfigurations>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
